{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BPMN_JSON",
  "description": "Formato intermediário robusto para síntese e edição de processos BPMN",
  "type": "object",
  "required": [
    "process",
    "elements",
    "flows"
  ],
  "definitions": {
    "ProcessInfo": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        }
      }
    },
    "Lane": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "childElementIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "ElementMeta": {
      "type": "object",
      "description": "Dados para rastreabilidade (citações do RAG)",
      "properties": {
        "sourceArtifactId": {
          "type": "string"
        },
        "pageNumber": {
          "type": "integer"
        }
      }
    },
    "BPMNElement": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "task",
            "userTask",
            "serviceTask",
            "startEvent",
            "endEvent",
            "exclusiveGateway",
            "parallelGateway"
          ]
        },
        "name": {
          "type": "string"
        },
        "laneId": {
          "type": "string",
          "description": "Referência à raia onde o elemento reside"
        },
        "meta": {
          "$ref": "#/definitions/ElementMeta"
        }
      }
    },
    "SequenceFlow": {
      "type": "object",
      "required": [
        "source",
        "target",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "sequenceFlow"
        },
        "name": {
          "type": "string"
        },
        "waypoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "required": [
              "x",
              "y"
            ]
          }
        }
      }
    }
  },
  "properties": {
    "process": {
      "$ref": "#/definitions/ProcessInfo"
    },
    "lanes": {
      "type": "array",
      "description": "Definição de raias e pools para layout hierárquico (ELK.js)",
      "items": {
        "$ref": "#/definitions/Lane"
      }
    },
    "elements": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/BPMNElement"
      }
    },
    "flows": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/SequenceFlow"
      }
    }
  }
}